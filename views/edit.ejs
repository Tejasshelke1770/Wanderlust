<% layout('layouts/boilerplate') %>

<body>
  <div class="row mt-3">
    <div class="col-8 offset-2 ">
  <h2>Edit Listing</h2>
  <form enctype="multipart/form-data" method="POST" action="/listing/<%=id%>?_method=PUT" novalidate class="needs-validation">
    <div class="mb-3">
      <label for="title" class="form-label ">Title : </label>
      <input required class="form-control" type="text" name="listing[title]" id="title" value="<%= list.title %>" />
      <div class="invalid-feedback">Enter a Valid Title</div>
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">Description : </label>
      <textarea required  class="form-control" type="textarea" name="listing[description]" id="description">
  <%=list.description  %></textarea>
  <div class="invalid-feedback">Please Enter Short Description</div>
  </div>
  <div class="mb-3">
   <p>Original Listing Image</p> 
    <img src="<%=ogImage%>"  >
  </div>
    <div class="mb-3">
      <label for="image" class="form-label">Upload Image: </label>
      <input  name="listing[image]" class="form-control" type="file" id="image" />
    </div >
    <div class="row">
      <div class="mb-3 col-4">
        <label for="price" class="form-label">Price : </label>
        <input
        required
          type="number"
          name="listing[price]"
          id="price"
          class="form-control"
          value="<%= list.price %>" />
      <div class="invalid-feedback">Enter a Valid Price</div>
      </div>
      <div class="mb-3 col-md-8">
        <label for="country" class="form-label">Country : </label>
        <input
        required
        class="form-control"
          type="text"
          name="listing[country]"
          id="country"
          value="<%= list.country  %>"/>
        <div class="invalid-feedback">Enter a Valid Country</div>
      </div>
    </div>
    <div class="mb-3">
      <label for="location" class="form-label">Location : </label>
      <input
      required
      class="form-control"
        type="text"
        name="listing[location]"
        id="location"
        value="<%= list.location  %>" />
      <div class="invalid-feedback">Enter a Valid Location</div>
    </div>
    <button class="btn btn-dark mb-3 add-btn">Edit</button>
  </form>
</div>
</div>
</body>
