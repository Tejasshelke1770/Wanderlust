<% layout('layouts/boilerplate') %>
   
  <body>
    <div class="row mt-3">
      <div class="col-8 offset-2 ">
      <h2> Create New Listing</h2>
      <form enctype="multipart/form-data" method="POST" action="/listing" novalidate class="needs-validation">
        <div class="mb-3">
          <label for="title" class="form-label">Title:</label>
          <input required type="text" id="title" name="listing[title]" class="form-control" placeholder="Enter Title" />
        <div class="invalid-feedback">Enter a Valid Title</div>
        </div>
      <div class="mb-3">
        <label for="description" class="form-label"></label>Description:</label>
        <textarea required class="form-control" id="description" placeholder="Enter Description" name="listing[description]"></textarea>
        <div class="invalid-feedback">Please Enter Short Description</div>
      </div>
    <div class="mb-3">
      <label class="form-label" for="image">Upload Image:</label>
      <input  class="form-control"type="file" id="image" name="listing[image]"  />
    </div>
    <div class="row">
        <div class="mb-3 col-4">
      <label class="form-label"for="price">Price:</label>
      <input required class="form-control" type="number" id="price" name="listing[price]" placeholder="Enter Price" />
      <div class="invalid-feedback">Enter a Valid Price</div>
    </div>
      <div class="mb-3 col-md-8">
        <label class="form-label" for="country">Country:</label>
        <input required class="form-control" type="text" id="country" name="listing[country]" placeholder="Enter Country" />
        <div class="invalid-feedback">Enter a Valid Country</div>
      </div>
    </div>
     
    <div class="mb-3">
      <label class="form-label" for="location">Location:</label>
      <input required class="form-control" type="text" id="location" name="listing[location]" placeholder="Enter Location" />
      <div class="invalid-feedback">Enter a Valid Location</div>
    </div>
        <button class="btn btn-dark mb-3 add-btn">Add</button>
    </form>
  </div>
    </div>
  </body>

